<center>
<a href="/">
      Home
      </a>
  <br>
  <br>
    <h1>
      Current Sign-ups:
    </h1>
  <br>
   <br>
  <table border="1" cellpadding="5" cellspacing="5">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>School</th>
         <th>Conference</th>
        <th>Event</th>
        <th>Swim Time</th>
      </tr>
      <% @all_signups.each do |n| %>   
      <tr>  
        <td><%= n.id %></td>
        <td><%= n.get_swimmer_name %></td>
        <td><%= n.get_school_name %></td>
        <td><%= n.get_conference_name %></td>
        <td><%= n.get_event_name %></td>
        <td><%= n.completed_swim_time %></td>
      </tr>
        <% end %>
      
    </table>
    
  <br>
  <br>
    Please complete the following to add a sign-up record: 
  <br>
  <br>
  <br>
    <form action="/view_add_signup_confirmation" method="post">
      Swimmer name:
  <br>
  <br>
      <input type="text" name="swim_signup_name">
  <br>
  <br>
  <br>
  <br>
      Event name:
  <br>
  <br>
      <input type="text" name="event_signup_name">
  <br>
  <br>
  <br>
  <br>    
      <input type="submit">
    </form>
</center>
